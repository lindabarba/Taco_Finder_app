<h2><%= @tacospot.name %></h2>

<div class="row">
  <div class="col s12 m6">
    <div class="card">
      <div class="card-image">
        <%= image_tag @tacospot.image_url %>
      </div>
      <div class="card-content">
        <p><%= @tacospot.street_address %></p>
        <p><%= @tacospot.city %>, <%= @tacospot.state %>&nbsp;<%= @tacospot.zip %></p>
        <p>Hours: <%= @tacospot.hours %></p>
        <p>Cash only: <%= @tacospot.cash_only %></p>
      </div>
      <div class="card-action">
        <p><%= link_to "Fix up this taco spot", edit_tacospot_path(@tacospot) if current_user %></p>
        <p><%= link_to "This taco spot no longer exists", tacospot_path, method: :delete, data: { confirm: "Are you sure?" } if current_user %></p>
      </div>
    </div>
  </div>
</div>
